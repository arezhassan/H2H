<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminBookConsignment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:background="@color/appblue"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivBackAdmin"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_gravity="start"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/whitebackground"
                    android:src="@drawable/baseline_arrow_back_24" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:drawableBottom="@drawable/baseline_local_shipping_24"
                    android:drawablePadding="4dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Admin Consignment Pannel"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/layoutbg2"
                    android:orientation="vertical"></LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/layoutbg2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:textColorHint="#CD000000"
                        app:boxBackgroundColor="#00000000"
                        app:boxBackgroundMode="filled"
                        app:boxStrokeWidth="0dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etSenderAddressAdmin"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/etbackground"
                            android:drawableStart="@drawable/baseline_my_location_24"
                            android:drawingCacheQuality="high"
                            android:gravity="center"
                            android:hint="Sender Address"
                            android:inputType="textPostalAddress"
                            android:textColor="@color/black"
                            android:textColorHint="@color/white" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:textColorHint="#CD000000"
                        app:boxBackgroundColor="#00000000"
                        app:boxBackgroundMode="filled"
                        app:boxStrokeWidth="0dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etReceiverAddressAdmin"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/etbackground"
                            android:drawableStart="@drawable/baseline_location_on_24"
                            android:drawingCacheQuality="high"
                            android:gravity="center"
                            android:hint="Receiver Address"
                            android:inputType="textPostalAddress"
                            android:textColor="@color/black"
                            android:textColorHint="@color/white" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:textColorHint="#CD000000"
                        app:boxBackgroundColor="#00000000"
                        app:boxBackgroundMode="filled"
                        app:boxStrokeWidth="0dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etReceiverPhoneAdmin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/etbackground"
                            android:drawableStart="@drawable/baseline_phone_24"
                            android:drawingCacheQuality="high"
                            android:gravity="center"
                            android:hint="Receiver Phone Number"
                            android:inputType="number"
                            android:textColor="@color/black"
                            android:textColorHint="@color/white" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:textColorHint="#CD000000"
                        app:boxBackgroundColor="#00000000"
                        app:boxBackgroundMode="filled"
                        app:boxStrokeWidth="0dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etReceiverNameAdmin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/etbackground"
                            android:drawableStart="@drawable/twotone_person_24"
                            android:drawingCacheQuality="high"
                            android:gravity="center"
                            android:hint="Receiver Name"
                            android:inputType="text"
                            android:textColor="@color/black"
                            android:textColorHint="@color/white" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:textColorHint="#CD000000"
                        app:boxBackgroundColor="#00000000"
                        app:boxBackgroundMode="filled"
                        app:boxStrokeWidth="0dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etSenderNameAdmin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/etbackground"
                            android:drawableStart="@drawable/twotone_person_24"
                            android:drawingCacheQuality="high"
                            android:gravity="center"
                            android:hint="Sender Name"
                            android:inputType="text"
                            android:textColor="@color/black"
                            android:textColorHint="@color/white" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:textColorHint="#CD000000"
                        app:boxBackgroundColor="#00000000"
                        app:boxBackgroundMode="filled"
                        app:boxStrokeWidth="0dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDateAdmin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/etbackground"
                            android:drawableStart="@drawable/baseline_date_range_24"
                            android:drawingCacheQuality="high"
                            android:gravity="center"
                            android:hint="Date"
                            android:inputType="date"
                            android:textColor="@color/black"
                            android:textColorHint="@color/white" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:textColorHint="#CD000000"
                        app:boxBackgroundColor="#00000000"
                        app:boxBackgroundMode="filled"
                        app:boxStrokeWidth="0dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etTimeAdmin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/etbackground"
                            android:drawableStart="@drawable/baseline_access_time_24"
                            android:drawingCacheQuality="high"
                            android:gravity="center"
                            android:hint="Time"
                            android:inputType="time"
                            android:textColor="@color/black"
                            android:textColorHint="@color/white" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif"
                        android:text="Please Select item category"
                        android:textColor="#CC000000"
                        android:textSize="18sp" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinnerAdmin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/etbackground"
                    android:entries="@array/select_category_prompt"
                    android:gravity="center"
                    android:textAlignment="center" />

                <Spinner
                    android:id="@+id/quantitySpinnerAdmin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/etbackground"
                    android:entries="@array/select_quantity"
                    android:gravity="center"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:textColorHint="#CD000000"
                    app:boxBackgroundColor="#00000000"
                    app:boxBackgroundMode="filled"
                    app:boxStrokeWidth="0dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etDescriptionAdmin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/etbackground"
                        android:drawableStart="@drawable/baseline_description_24"
                        android:drawingCacheQuality="high"
                        android:gravity="center"
                        android:hint="Enter Product Details (Optional)"
                        android:inputType="textCapSentences"
                        android:textColor="@color/black"
                        android:textColorHint="@color/white" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:textColorHint="#CD000000"
                    app:boxBackgroundColor="#00000000"
                    app:boxBackgroundMode="filled"
                    app:boxStrokeWidth="0dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etConsignmentWeightAdmin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/etbackground"
                        android:drawableStart="@drawable/baseline_monitor_weight_24"
                        android:drawingCacheQuality="high"
                        android:gravity="center"
                        android:hint="Weight (KGs)"
                        android:inputType="number|numberDecimal"
                        android:textColor="@color/black"
                        android:textColorHint="@color/white" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:textColorHint="#CD000000"
                    app:boxBackgroundColor="#00000000"
                    app:boxBackgroundMode="filled"
                    app:boxStrokeWidth="0dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etConsignmentDistanceAdmin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/etbackground"
                        android:drawableStart="@drawable/baseline_social_distance_24"
                        android:drawingCacheQuality="high"
                        android:gravity="center"
                        android:hint="Distance (KMs)"
                        android:inputType="number|numberDecimal"
                        android:textColor="@color/black"
                        android:textColorHint="@color/white" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btnUploadPictureAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:backgroundTint="#4CAF50"
                android:text="Upload Item Photo"
                android:textAllCaps="false"
                android:textColor="@color/white"
                tools:visibility="gone" />

            <ImageView
                android:id="@+id/ivDoneAdmin"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_cloud_done_24"
                tools:visibility="gone" />

            <ProgressBar
                android:id="@+id/progressbarAdmin"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp" />

            <TextView
                android:id="@+id/tvImageNameAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" />

            <Button
                android:id="@+id/btnSubmitAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:backgroundTint="#0B0A0A"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:visibility="visible"
                app:cornerRadius="10dp" />


        </LinearLayout>


    </ScrollView>

</FrameLayout>